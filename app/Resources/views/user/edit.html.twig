{% extends '::base.html.twig' %}

{% block title %}Egzaminy Online | Update User{% endblock %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Users
            <small>Edit user</small>
        </h1>
    </section>
    <!-- Main content -->
    <section class="content">
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="flash-notice">
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                    {{ flashMessage | trans }}
                </div>
            </div>
        {% endfor %}
        <div class="panel panel-default">
            <div class="panel-body">
                <form method="post" id="editForm" action="{{ url('users:edit:do', {uid: user.id}) }}">
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input id="email" type="email" class="form-control" name="email" placeholder="E-mail" required value="{{ user.username }}">
                    </div>
                    <div class="form-group">
                        <label for="dispName">Display name</label>
                        <input id="dispName" type="text" class="form-control" name="displayName" placeholder="Display Name" required value="{{ user.displayName }}">
                    </div>
                    <div class="form-group">
                        <label for="pass">New Password</label>
                        <input id="pass" type="password" class="form-control" name="password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <label for="type">Account type</label>
                        <select id="type" class="form-control" name="accountType" required>
                            <option {% if user.type == "student" %}selected{% endif %} value="student">Student</option>
                            <option {% if user.type == "admin" %}selected{% endif %} value="admin">Admin</option>
                        </select>
                    </div>



                    <button type="submit" id="userCreateSubmitButton" class="btn btn-success">Update</button>
                </form>
            </div>
        </div>
    </section>
{% endblock %}

